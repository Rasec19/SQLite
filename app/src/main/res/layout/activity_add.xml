<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/editTextTextCargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:hint="Corgo"
        android:inputType="textPersonName"
        android:textColor="@color/Blanco"
        android:textColorHint="@color/Blanco"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextNumTelefono"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextNumTelefono"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNumTelefono"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNombre" />

    <EditText
        android:id="@+id/editTextTextNumTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="31dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="textPersonName"
        android:textColor="@color/Blanco"
        android:textColorHint="@color/Blanco"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextNumeroTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextCargo" />

    <EditText
        android:id="@+id/editTextTextNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColor="@color/Blanco"
        android:textColorHint="@color/Blanco"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextCargo"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextCargo"
        app:layout_constraintStart_toStartOf="@+id/editTextTextCargo"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextNumeroTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="277dp"
        android:ems="10"
        android:hint="Numero de telefono"
        android:inputType="textPersonName"
        android:textColor="@color/Blanco"
        android:textColorHint="@color/Blanco"
        app:layout_constraintBottom_toTopOf="@+id/buttonAgregar"
        app:layout_constraintStart_toStartOf="@+id/editTextTextNumTelefono"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumTelefono" />

    <Button
        android:id="@+id/buttonAgregar"
        android:layout_width="135dp"
        android:layout_height="0dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/btn_aregar"
        android:drawableRight="@mipmap/ic_add"
        android:onClick="btnAdd"
        android:paddingEnd="5pt"
        android:paddingRight="10pt"
        android:text="AGREGAR"
        android:textColor="@color/Blanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextNumeroTelefono" />
</androidx.constraintlayout.widget.ConstraintLayout>